{
    "root": true,
    "extends": [
        "xo",
        "xo-typescript",
        "xo-typescript/space"
    ],
    "plugins": [
        "simple-import-sort"
    ],
    "rules": {
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",
        "@typescript-eslint/naming-convention": [
            "error",
            {
                "selector": "function",
                "format": [
                    "PascalCase",
                    "camelCase"
                ]
            }
        ]
    }
}