{
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "dist"
  },
  "exclude": ["dist"],
  "include": ["src/**/*.ts"]
}
